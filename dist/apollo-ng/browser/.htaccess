# Angular SPA - Toujours servir index.html pour les routes (évite page blanche au refresh sur #/auth/login etc.)
RewriteEngine On
RewriteBase /

# Priorité à index.html pour la racine et les dossiers (Hostinger)
DirectoryIndex index.html

# Si le fichier existe (JS, CSS, images...), le servir directement
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Si c'est un dossier réel (ex. /demo/), le servir
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Tout le reste (/, /auth/login, etc.) → index.html pour que le hash soit géré par Angular
RewriteRule ^ index.html [L]

# ===========================================
# CACHE CONTROL
# ===========================================

# index.html : JAMAIS caché (réactualisation après chaque déploiement)
<Files "index.html">
    Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
    Header set Surrogate-Control "no-store"
</Files>

# version.json : idem (vérification de nouvelle version)
<Files "version.json">
    Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
</Files>

# Fichiers JS/CSS avec hash : cache longue durée (1 an)
<FilesMatch "\.(js|css)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Polices et images : cache longue durée (1 an)
<FilesMatch "\.(woff|woff2|ttf|eot|otf|ico|png|jpg|jpeg|gif|svg|webp)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Angular SPA - Redirect all requests to index.html
RewriteEngine On

# Si le fichier ou répertoire existe, le servir directement
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Sinon, rediriger vers index.html (Angular SPA routing)
RewriteRule ^ index.html [L]

# ===========================================
# CACHE CONTROL
# ===========================================

# index.html : JAMAIS caché (force le navigateur à toujours vérifier)
<Files "index.html">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</Files>

# Fichiers JS/CSS avec hash : cache longue durée (1 an)
<FilesMatch "\.(js|css)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Polices et images : cache longue durée (1 an)
<FilesMatch "\.(woff|woff2|ttf|eot|otf|ico|png|jpg|jpeg|gif|svg|webp)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>
